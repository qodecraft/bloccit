
<h1><%= markdown @post.title %></h1>

<div class="row">
  <div class="col-md-8">
     <small class="desc">
       <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
       submitted <%= time_ago_in_words(@post.created_at) %> ago by
       <%= @post.user.name %>
     </small>
    
    <p><%= image_tag(@post.image.large.url ) %><p>
    <p><%= markdown @post.body %></p>
  </div>  

  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic,@post), class: 'btn btn-success' %>
    <% end %>
    <% if policy(@post).destroy? %>
    <%= link_to "Delete", [@topic, @post], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?'} %>
    <% end %>
  </div>
</div>
<h3>Comments</h3>
<%= render partial: 'comments/comment', locals: { topic: @topic, post: @post } %>
<%= render partial: 'comments/form', locals: { topic: @topic, post: @post } %>





